<?xml version="1.0" standalone="no"?>

<unit>
	<parameters>
		<size value="1"/>
		<height value="3"/>
		<max-hp value="700" regeneration="0"/>
		<max-ep value="0"/>
		<armor value="20"/>	
		<armor-type value="organic"/>				
		<sight value="15"/>
		<time value="60"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
			<level name="elite" kills="5"/>
		</levels>
		<fields>
			<field value="land"/>
		</fields>	
		<properties/>
		<light enabled="false"/>
		<unit-requirements/>
			
		<upgrade-requirements/>
		<resource-requirements>
			<resource name="wood" amount="50"/>
			<resource name="uranium" amount="75"/>				
		</resource-requirements>
		<resources-stored/>
		<image path="images/inf.bmp"/>
		<image-cancel path="images/tech_cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/click.wav"/>
			

		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/guard_ack1.wav"/>
			
			
		</command-sounds>
	</parameters>

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="45"/>
			<animation path="models/inf1.g3d"/>
			
			<sound enabled="false"/>
				
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="220"/>
			<anim-speed value="125"/>
			<animation path="models/inf1_move.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="50"/>
			<anim-speed value="50"/>
			<animation path="models/inf1_fire.g3d"/>
			<sound enabled="false"/>
				
			<attack-strenght value="100"/>
			<attack-var value="50"/>
			<attack-range value="5"/>
			<attack-type value="piercing"/>
			<attack-start-time value="0.5"/>
			<attack-fields>
				<field value="land"/>
				<field value="air"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="true">
					<sound-file path="/sounds/laser4.wav"/>
					
				</sound>
			</projectile>
			<splash value="false"/>
		</skill>
		
		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="60"/>
			<animation path="models/inf1_dead.g3d"/>
			<sound enabled="false"/>			
			<fade value="false"/>
		</skill>


	</skills>

	<!-- *** commands *** -->
	
	<commands>
		
		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="images/tech_cancel.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="images/tech_move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="images/tech_shot.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
		
		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="images/tech_hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
				
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
		
	</commands>
</unit>
