<?xml version="1.0" standalone="no"?>

<unit>
	<parameters>
		<size value="3"/>
		<height value="1"/>
		<max-hp value="2000" regeneration="1"/>
		<max-ep value="0"/>
		<armor value="40"/>	
		<armor-type value="kevlar"/>				
		<sight value="5"/>
		<time value="65"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
			<level name="elite" kills="9"/>
		</levels>
		<fields>
			<field value="air"/>
		</fields>	
		<properties/>
		<light enabled="false"/>
		<unit-requirements/>
		<upgrade-requirements>					
							
		</upgrade-requirements>	
		<resource-requirements>
			<resource name="wood" amount="200"/>
			<resource name="uranium" amount="500"/>
			<resource name="ore" amount="200"/>
			<resource name="food" amount="1"/>				
		</resource-requirements>
		<resources-stored/>
		<image path="images/jumpjet.bmp"/>
		<image-cancel path="images/cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="/sounds/click.wav"/>					
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/click.wav"/>			
		</command-sounds>

	</parameters>

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="75"/>
			<animation path="../kestral/models/bomber_hover.g3d"/>
			<particles value="true">	
				<particle-file path="particle_engine_h1.xml"/>
				<particle-file path="particle_engine_h2.xml"/>
				<particle-file path="particle_engine_h3.xml"/>
				<particle-file path="particle_engine_h4.xml"/>		
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/orni_standing.wav"/>
			</sound>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="200"/>
			<anim-speed value="200"/>
			<animation path="../kestral/models/bomber.g3d"/>
			<particles value="true">	
				<particle-file path="particle_engine1.xml"/>
				<particle-file path="particle_engine2.xml"/>
				<particle-file path="particle_engine3.xml"/>
				<particle-file path="particle_engine4.xml"/>		
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/orni_fly.wav"/>
			</sound>
			
		</skill>
		
		<skill>
			<type value="attack"/>
			<name value="missile_skill"/>		
			<ep-cost value="0"/>
			<speed value="35"/>
			<anim-speed value="35"/>
			<animation path="../kestral/models/bomber_hover.g3d"/>
			<particles value="true">	
				<particle-file path="particle_engine_h1.xml"/>
				<particle-file path="particle_engine_h2.xml"/>
				<particle-file path="particle_engine_h3.xml"/>
				<particle-file path="particle_engine_h4.xml"/>		
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/orni_standing.wav"/>
			</sound>
			<attack-strenght value="220"/>
			<attack-var value="40"/>
			<attack-range value="3"/>
			<attack-type value="piercing"/>
			<attack-start-time value="0.5"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="molotov_particle_proj.xml"/>
				<sound enabled="true">
					<sound-file path="/sounds/bomb_drop.wav"/>
				</sound>
			</projectile>
			<splash value="true">
				<radius value="1"/>
				<damage-all value="true"/>
				<particle value="true" path="molotov_particle_splash.xml"/>
			</splash>
		</skill>			
		
		
		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="50"/>
			<anim-speed value="50"/>
			<animation path="../kestral/models/bomber.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/orni_die1.wav"/>
				<sound-file path="sounds/orni_die2.wav"/>
				<sound-file path="sounds/orni_die3.wav"/>
			</sound>
			<fade value="false"/>
		</skill>

	</skills>

	<commands>
		<command>
			<type value="stop"/>
			<name value="stop"/>
			<image path="images/cancel.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>
                
		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="images/move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="bomb"/>
			<image path="images/maverick.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="missile_skill"/>
		</command>
		
				
                
		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="images/hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="missile_skill"/>
		</command>

	</commands>
</unit>
