<?xml version="1.0" standalone="no"?>

<unit>
	<parameters>
		<size value="2"/>
		<height value="5"/>
		<max-hp value="2000" regeneration="1"/>
		<max-ep value="0"/>
		<armor value="40"/>	
		<armor-type value="kevlar"/>				
		<sight value="10"/>
		<time value="65"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
			<level name="elite" kills="9"/>
		</levels>
		<fields>
			<field value="land"/>
		</fields>	
		<properties/>
		<light enabled="false"/>
		<unit-requirements/>
		<upgrade-requirements>					
							
		</upgrade-requirements>	
		<resource-requirements>
			<resource name="wood" amount="50"/>
			<resource name="uranium" amount="250"/>
			<resource name="energy" amount="1"/>				
		</resource-requirements>
		<resources-stored/>
		<image path="images/unit_archer.bmp"/>
		<image-cancel path="images/tech_cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/guard_select1.wav"/>					
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/guard_ack1.wav"/>					
		</command-sounds>
	</parameters>

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="25"/>
			<animation path="models/martian_walker.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="200"/>
			<anim-speed value="100"/>
			<animation path="models/martian_walker_move.g3d"/>
			<sound enabled="false"/>
			
		</skill>

		<skill>
			<type value="move"/>
			<name value="charge_skill"/>		
			<ep-cost value="0"/>
			<speed value="250"/>
			<anim-speed value="125"/>
			<animation path="models/martian_walker_move.g3d"/>
			<sound enabled="false"/>
			
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="90"/>
			<anim-speed value="90"/>
			<animation path="models/martian_walker_firing.g3d"/>
			<particles value="true">
	
				<particle-file path="smoke_particles.xml"/>
		
				<particle-file path="cannonsmoke_particles.xml"/>
		
			</particles>
			<sound enabled="false"/>
				
			<attack-strenght value="200"/>
			<attack-var value="40"/>
			<attack-range value="8"/>
			<attack-type value="piercing"/>
			<attack-start-time value="0.6"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="true">				
				<particle value="true" path="particle_proj.xml"/>				
				<sound enabled="true">
					<sound-file path="/sounds/laser4.wav"/>
				</sound>
			</projectile>
			<splash value="true">				
				<radius value="1"/>			
				<damage-all value="false"/>			
				<particle value="true" path="particle_splash.xml"/>			
			</splash>
		</skill>
		
				
		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="60"/>
			<animation path="models/martian_walker_die.g3d"/>
			<particles value="true">										
				<particle-file path="die_smoke_particles.xml"/>									
				<particle-file path="die_glow_particles.xml"/>									
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/catapult_die3.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>


	</skills>

	<!-- *** commands *** -->
	
	<commands>
		
		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="images/tech_halt.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="images/tech_move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="images/tech_shot.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="charge_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
		
		
		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="images/tech_hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements>
				
			</upgrade-requirements>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
		
	</commands>
</unit>
